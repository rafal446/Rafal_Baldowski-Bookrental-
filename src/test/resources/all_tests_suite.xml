<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Book rental Tests">

    <listeners>
        <listener class-name="utils.testng.listener.TestListener"/>
    </listeners>

    <test name="Positive and negative login tests">
        <classes>
            <class name="tests.loginAndRegisterTests.PositiveAndNegativeLoginTest"/>
        </classes>
    </test>
    <test name="Positive and negative register tests">
        <classes>
            <class name="tests.loginAndRegisterTests.RegisterTests"/>
        </classes>
    </test>

    <test name="Adding, removing and editing titles">
        <classes>
            <class name="tests.mainPageTests.MainPageTest"/>
        </classes>
    </test>

    <test name="Adding, removing and editing copies">
        <classes>
            <class name="tests.showCopiesPageTests.ShowCopiesPageTests"/>
        </classes>
    </test>

    <test name="Adding, removing and editing rentals">
        <classes>
            <class name="tests.rentPageTest.RentPageTest"/>
        </classes>
    </test>

</suite>